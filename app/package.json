{
  "name": "aion-desktop",
  "version": "1.0.0",
  "main": "src/main/app.ts",
  "scripts": {
    "dev": "npm-run-all -p dev:renderer dev:electron",
    "dev:renderer": "vite dev",
    "dev:electron": "wait-on http://localhost:5173 && electron -r ts-node/register ./src/main/app.ts",
    "build": "vue-tsc && vite build && tsc -p tsconfig.main.json && electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/electron": "^1.6.10",
    "@vitejs/plugin-vue": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0",
    "wait-on": "^7.2.0"
  }
}
